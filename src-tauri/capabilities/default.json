{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "dialog:default",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    },
    {
      "identifier": "fs:default",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    },
    {
      "identifier": "opener:default",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    },
    "opener:allow-open-path"
  ]
}